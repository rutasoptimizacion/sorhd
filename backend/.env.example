# Database Configuration
DATABASE_URL=postgresql://sorhd_user:sorhd_password@localhost:5432/sorhd

# Security
SECRET_KEY=your-secret-key-min-32-characters-long-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Google Maps API (Optional)
GOOGLE_MAPS_API_KEY=

# OSRM Endpoint (Optional)
OSRM_ENDPOINT=http://router.project-osrm.org

# ===========================
# Notification System
# ===========================

# Firebase Cloud Messaging (FCM) - Android Push Notifications
# Download service account JSON from Firebase Console
GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-service-account.json

# Apple Push Notification Service (APNS) - iOS Push Notifications
# Get these from Apple Developer portal
APNS_TEAM_ID=YOUR_TEAM_ID_HERE
APNS_KEY_ID=YOUR_KEY_ID_HERE
APNS_KEY_FILE=/path/to/AuthKey_KEYID.p8
APNS_BUNDLE_ID=com.sorhd.app
APNS_USE_SANDBOX=true  # Set to false in production

# Twilio SMS - SMS Notifications (Fallback)
# Get these from Twilio console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_PHONE=+56912345678  # Chile format

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
